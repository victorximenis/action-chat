<div class="row justify-content-center" id="chatroom-title">
  <div class="col-8">
    <h1>Tópicos</h1>
  </div>
</div>

<div class="row justify-content-center" id="chatrooms">
  <div class="col-8">
    <%= render partial: 'chatroom_form', locals: {chatroom: @chatroom} %>
    <div id="chatroom-errors">

    </div>
      <ul id="chatroom-index">
        <% if @chatrooms.any? %>
            <%= render @chatrooms%>
        <%else %>
      </ul>
      <div class="alert alert-info" role="alert">
        Seja o primeiro a criar um tópico!
      </div>
    <% end %>
  </div>
</div>
